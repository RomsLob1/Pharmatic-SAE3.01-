{% extends 'base.html.twig' %}

{% block title %}Modification du MotDePasse{% endblock %}

{% block body %}
    <section class="form-container py-5">
        <div class="form-card mx-auto p-4">
            <h1 class="form-title text-center mb-4">Modification du mot de passe</h1>
            {% for message in app.flashes('warning') %}
                <div class="alert alert-warning mt-4">
                    {{ message }}
                </div>
            {% endfor %}

            {{ form(form) }}
            <p class="small mt-3">Les champs comportant un " * " sont obligatoires.</p>
        </div>
    </section>
{% endblock %}
