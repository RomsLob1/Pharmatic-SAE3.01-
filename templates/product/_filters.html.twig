<div class="d-flex justify-content-center mt-3">
    <button type="button" class="btn btn-custom" data-bs-toggle="modal" data-bs-target="#filtersModal">
        <i class="fas fa-filter"></i>&nbsp;&nbsp;Filtrer
    </button>
</div>

<div class="modal fade" id="filtersModal" tabindex="-1" aria-labelledby="filtersModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="filtersModalLabel">Filtres</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body mt-2">
                <div class="d-flex justify-content-center">
                    <div style="width: 100%;">
                        {{ form_start(formFilters, {'attr': {'class': 'row g-3'}}) }}
                        <input type="hidden" name="search" value="{{ search }}">
                        <div class="row">
                            <div class="col-md-3">
                                {{ form_row(formFilters.category, {
                                    'label_attr': {'class': 'form-label', 'style': 'text-align: center; width: 100%;'},
                                    'attr': {'class': 'form-control'}
                                }) }}
                            </div>
                            <div class="col-md-3">
                                {{ form_row(formFilters.brand, {
                                    'label_attr': {'class': 'form-label', 'style': 'text-align: center; width: 100%;'},
                                    'attr': {'class': 'form-control'}
                                }) }}
                            </div>
                            <div class="col-md-3">
                                {{ form_row(formFilters.priceMin, {
                                    'label': 'Prix min (€)',
                                    'label_attr': {'class': 'form-label', 'style': 'text-align: center; width: 100%;'},
                                    'attr': {'class': 'form-control'}
                                }) }}
                            </div>
                            <div class="col-md-3">
                                {{ form_row(formFilters.priceMax, {
                                    'label': 'Prix max (€)',
                                    'label_attr': {'class': 'form-label', 'style': 'text-align: center; width: 100%;'},
                                    'attr': {'class': 'form-control'}
                                }) }}
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-12 d-flex gap-2 justify-content-center">
                                <button type="submit" class="btn btn-custom">
                                    <i class="fas fa-circle-check"></i>&nbsp;&nbsp;Valider
                                </button>
                                <button type="button" class="btn btn-secondary" onclick="window.location.href='{{ path('app_product') }}'">
                                    Réinitialiser
                                </button>
                            </div>
                        </div>
                        {{ form_end(formFilters) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
