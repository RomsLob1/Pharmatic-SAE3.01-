{{ form_start(formFilters, {'attr': {'class': 'row g-3 align-items-end'}}) }}
    <input type="hidden" name="search" value="{{ search }}">

    <div class="col-md-3">
        {{ form_row(formFilters.category, {
            'label_attr': {'class': 'form-label'},
            'attr': {'class': 'form-control'}
        }) }}
    </div>
    <div class="col-md-3">
        {{ form_row(formFilters.brand, {
            'label_attr': {'class': 'form-label'},
            'attr': {'class': 'form-control'}
        }) }}
    </div>
    <div class="col-md-2">
        {{ form_row(formFilters.priceMin, {
            'label': 'Prix min (€)',
            'label_attr': {'class': 'form-label'},
            'attr': {'class': 'form-control'}
        }) }}
    </div>
    <div class="col-md-2">
        {{ form_row(formFilters.priceMax, {
            'label': 'Prix max (€)',
            'label_attr': {'class': 'form-label'},
            'attr': {'class': 'form-control'}
        }) }}
    </div>
    <div class="col-md-2 d-flex gap-2">
        <button type="submit" class="btn btn-primary w-100">Filtrer</button>
        <a href="{{ path('app_product') }}" class="btn btn-secondary w-100">Réinitialiser</a>
    </div>
{{ form_end(formFilters) }}