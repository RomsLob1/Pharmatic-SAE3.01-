{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <section class="py-5">
        <div class="details-container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 align-items-center">
                <div class="col-md-6">
                    <img class="product-image card-img-top mb-5 mb-md-0" src="{{ asset('') }}" alt="" />
                </div>

                <div class="col-md-6">
                    <div class="small mb-1"><p>Référence: --- ---</p></div>
                    <h1 class="product-title">Nom du produit</h1>

                    <div class="fs-5 mb-2">
                        <span class="price">-,--&euro;</span>
                    </div>

                    <p class="product-description">
                        Description..
                    </p>

                    <div class="brand mb-3">
                        <a href=""><p>Marque</p></a>
                        <a href=""><p>Catégorie</p></a>
                    </div>

                    <div class="d-flex">
                        <input class="form-control text-center me-3" id="inputQuantity" type="number" value="1" style="max-width: 4rem" />
                        <button class="btn btn-custom flex-shrink-0" type="button">
                            <i class="fas fa-shopping-cart"></i>&nbsp;&nbsp;&nbsp;Ajouter au panier</button>
                    </div>
                </div>
            </div>

            <!-- Produits similaires -->
            <div class="row mt-5">
                <h4>Dans la même catégorie</h4>
                <div class="col-md-3">
                    <div class="similar-product-card card">
                        <img src="https://via.placeholder.com/300x300" class="card-img-top" alt="Produit similaire">
                        <div class="card-body">
                            <h5 class="card-title">Produit similaire 1</h5>
                            <p class="card-text">Description</p>
                            <a href="#" class="btn btn-custom" id="btn-custom-secondary">Voir le produit</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
